<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link rel='stylesheet' href='bnb_styles.css'>
    <title class='headings'>Makers BnB</title>
  </head>

  <body>
    <div class="dropdown">
      <button class="dropbtn">Menu</button>
        <div class="dropdown-content">
          <a href="/user">Home</a>
          <a href="/my_spaces">Manage Spaces</a>
          <form action='/sign_out' method='post'>
            <input type='submit' name='sign_out' value='Sign Out'>
          </form>
        </div>
    </div>
    <ul>
    <h2>Pending</h2>
    <%@pending.each do |booking| %>
    <li class="pending">
        Space: <%=booking.space.space_name%><br>
        Price: <%=booking.space.price%><br>
        </li>
    <%end%>
    </ul>

      <ul>
    <h2>Accepted</h2>
    <%@accepted.each do |booking| %>
    <li class="accepted">
      Space: <%=booking.space.space_name%><br>
      Price: <%=booking.space.price%><br>
        </li>
    <%end%>
    </ul>

      <ul>
    <h2>Declined</h2>
    <%@declined.each do |booking| %>
    <li class="declined">
        Space: <%=booking.space.space_name%><br>
        Price: <%=booking.space.price%><br>
        </li>
    <%end%>
    </ul>

  </body>
</html>
