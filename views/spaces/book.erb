


<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
      <link rel='stylesheet' href='bnb_styles.css'>
    <title class=headings>Makers BnB</title>
  </head>

  <body>

    <div class="dropdown">
      <button class="dropbtn">Menu</button>
        <div class="dropdown-content">
          <a href="/user">Home</a>
          <a href="/my_bookings/:user_id">Manage Bookings</a>
          <a href="/my_spaces">Manage Spaces</a>
          <form action='/sign_out' method='post'>
            <input type='submit' name='sign_out' value='Sign Out'>
          </form>
        </div>
    </div>

    <h2> This is the space you selected: </h2>
    <%= @space.space_name %>
    <%= @space.description %>
    <%= @space.price %>

     <form action="/spaces/book_space/<%=@space.space_id%>" method="post">
        <input type="submit" name="confirm" value="Confirm Booking">
    </form>
  </body>
</html>
